{
  "name": "ozon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "prettier --check . && stylelint --allow-empty-input \"**/*.{css,scss}\" && next lint",
    "format": "prettier --write .",
    "stylelint": "stylelint '**/*{.css,.scss}' --fix",
    "dev": "next dev",
    "build": "next build",
    "start": "next start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "YOUR_COMMAND_HERE",
      "pre-push": "YOUR_COMMAND_HERE"
